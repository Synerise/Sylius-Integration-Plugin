{% if is_enabled and product %}
<meta property="og:type" content="product">
<meta property="product:retailer_part_no" content="{{ product.code }}" {{ sylius_test_html_attribute('synerise-og-retailer-part-no') }} >
{% if(image_path) %}
<meta property="og:image" content="{{ absolute_url(asset('media/image/' ~ image_path)) }}"  {{ sylius_test_html_attribute('synerise-og-image') }}>
{% endif %}
<meta property="og:title" content="{{ product.name }}"  {{ sylius_test_html_attribute('synerise-og-title') }}>
<meta property="og:url" content="{{ absolute_url('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}"  {{ sylius_test_html_attribute('synerise-og-url') }}>
{% for taxon in product.taxons %}
<meta property="product:category" content="{{ taxon.getFullName(' > ')|raw }}"  {{ sylius_test_html_attribute('synerise-og-category') }}>
{% endfor %}
<meta property="product:price:amount" content="{{ price }}" {{ sylius_test_html_attribute('synerise-og-price') }}>
{% if(has_discount) %}
<meta property="product:sale_price:amount" content="{{ price }}" {{ sylius_test_html_attribute('synerise-og-sale-price') }} />
<meta property="product:original_price:amount" content="{{ original_price }}" {{ sylius_test_html_attribute('synerise-og-original-price') }}>
{% endif %}
{% endif %}
