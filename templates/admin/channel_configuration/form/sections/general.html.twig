<div class="tab-pane fade show active" data-card="v-steps-general">
    <div class="g-col-12 g-col-xl-12 card">
        <div class="card-header">
            <div class="card-title">
                {{ 'synerise_integration.channel_configuration.form.sections.general.title' | trans }}
                <a
                    class="d-inline-block cursor-pointer"
                    data-bs-toggle="popover"
                    data-bs-html="true"
                    data-bs-content="{{ 'synerise_integration.channel_configuration.form.sections.general.popover.content'|trans }}"
                >
                    {{ ux_icon('bi:info-circle-fill', {class: 'w-3 h-3'}) }}
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="w-100 d-flex align-items-center gap-4 mb-4">
                {{ form_row(hookable_metadata.context.form.channel, {
                    'row_attr': {'class': 'w-100'}
                }) }}
                {{ ux_icon('bi:arrow-right-short', {height: '24px', width: '24px', class: 'flex-shrink-0 mt-4'}) }}
                {{ form_row(hookable_metadata.context.form.workspace, {
                    'row_attr': {'class': 'w-100'}
                }) }}
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-secondary" data-card-target="v-steps-tracking" type="button">
                    {{ 'synerise_integration.ui.next' | trans }}
                </button>
            </div>
        </div>
    </div>
</div>
<script defer>
    document.addEventListener('DOMContentLoaded', function() {
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        popoverTriggerList.map(popover => new bootstrap.Popover(popover));
    });
</script>
