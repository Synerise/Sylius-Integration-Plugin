<div class="tab-pane fade" data-card="v-steps-events">
    <div class="g-col-12 g-col-xl-12 card">
        <div class="card-header">
            <div class="card-title">
                {{ 'synerise_integration.channel_configuration.form.sections.events.title' | trans }}
                <a
                    class="d-inline-block cursor-pointer "
                    data-bs-toggle="popover"
                    data-bs-html="true"
                    data-bs-content="{{ 'synerise_integration.channel_configuration.form.sections.events.popover.content'|trans }}"
                >
                    {{ ux_icon('bi:info-circle-fill', {class: 'w-3 h-3'}) }}
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="w-100 d-flex flex-column">
                {{ form_row(hookable_metadata.context.form.events, sylius_test_form_attribute('events')|merge({
                    attr: {
                        placeholder: 'synerise_integration.channel_configuration.form.events.placeholder' | trans
                    }
                })) }}
                {{ form_row(hookable_metadata.context.form.snrsParamsEnabled, sylius_test_form_attribute('snrsParamsEnabled')|merge({
                    label_attr: { class: 'checkbox-switch' }
                })) }}
                {{ form_row(hookable_metadata.context.form.queueEvents, sylius_test_form_attribute('queueEvents')|merge({
                    attr: {
                        placeholder: 'synerise_integration.channel_configuration.form.queue_events.placeholder' | trans
                    }
                })) }}
            </div>
            <div class="d-flex justify-content-between">
                <button class="btn" data-card-target="v-steps-tracking" type="button">
                    Back
                </button>
                <button class="btn btn-primary" data-card-target="v-steps-events" type="submit">
                    Configure
                </button>
            </div>
        </div>
    </div>
</div>
