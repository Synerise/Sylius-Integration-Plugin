<div class="tab-pane fade" data-card="v-steps-tracking">
    <div class="g-col-12 g-col-xl-12 card">
        <div class="card-header">
            <div class="card-title">
                {{ 'synerise_integration.channel_configuration.form.sections.tracking.title' | trans }}
                <a
                    class="d-inline-block cursor-pointer"
                    data-bs-toggle="popover"
                    data-bs-html="true"
                    data-bs-content="{{ 'synerise_integration.channel_configuration.form.sections.tracking.popover.content'|trans }}"
                >
                    {{ ux_icon('bi:info-circle-fill', {class: 'w-3 h-3'}) }}
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="w-100 d-flex flex-column">
                {{ form_row(hookable_metadata.context.form.trackingEnabled, sylius_test_form_attribute('trackingEnabled')|merge({ label_attr: { class: 'checkbox-switch' } })) }}
                {{ form_row(hookable_metadata.context.form.opengraphEnabled, sylius_test_form_attribute('opengraphEnabled')|merge({ label_attr: { class: 'checkbox-switch' } })) }}
                {{ form_row(hookable_metadata.context.form.virtualPage, sylius_test_form_attribute('virtualPage')|merge({ label_attr: { class: 'checkbox-switch' } })) }}
                {{ form_row(hookable_metadata.context.form.cookieDomainEnabled, sylius_test_form_attribute('cookieDomainEnabled')|merge({ label_attr: { class: 'checkbox-switch' } })) }}
                {% if hookable_metadata.context.formValues.cookieDomainEnabled == '1' %}
                    <div class="mb-3 field">
                        {{ form_label(hookable_metadata.context.form.cookieDomain) }}
                        <div class="input-group">
                            <span class="input-group-text">https://</span>
                            {{ form_widget(hookable_metadata.context.form.cookieDomain) }}
                        </div>
                    </div>
                {% endif %}
                {{ form_row(hookable_metadata.context.form.customPageVisit, sylius_test_form_attribute('customPageVisit')|merge({ label_attr: { class: 'checkbox-switch' } })) }}
            </div>
            <div class="d-flex justify-content-between">
                <button class="btn" data-card-target="v-steps-general" type="button">
                    Back
                </button>
                <button class="btn btn-secondary" data-card-target="v-steps-events" type="button">
                    Next
                </button>
            </div>
        </div>
    </div>
</div>
