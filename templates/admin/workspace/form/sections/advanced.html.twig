<div class="card">
    <div class="card-header">
        <div class="card-title">
            {{ 'synerise_integration.workspace.form.sections.advanced.card_title'|trans }}
            <span class="d-inline-block" data-bs-toggle="popover" data-bs-html="true" data-bs-title="{{ 'synerise_integration.workspace.form.sections.advanced.card_title'|trans }}" data-bs-content="{{ 'synerise_integration.workspace.form.sections.advanced.popover.content'|trans }}">
                {{ ux_icon('bi:info-circle-fill', {class: 'w-3 h-3'}) }}
            </span>
        </div>
    </div>
    <div class="card-body " id="card-advanced">
        {{ form_row(hookable_metadata.context.form.keepAliveEnabled, sylius_test_form_attribute('keepAliveEnabled')|merge({ row_attr: { class: 'mb-1' } })) }}

        <div class="mb-3 field">
            {{ form_label(hookable_metadata.context.form.liveTimeout) }}
            <div class="input-group">
                {{ form_widget(hookable_metadata.context.form.liveTimeout) }}
                <span class="input-group-text">{{ 'synerise_integration.ui.seconds_short'|trans }}</span>
            </div>
        </div>
        <div class="mb-3 field">
            {{ form_label(hookable_metadata.context.form.scheduledTimeout) }}
            <div class="input-group">
                {{ form_widget(hookable_metadata.context.form.scheduledTimeout) }}
                <span class="input-group-text">{{ 'synerise_integration.ui.seconds_short'|trans }}</span>
            </div>
        </div>

        {{ form_row(hookable_metadata.context.form.requestLoggingEnabled, sylius_test_form_attribute('requestLoggingEnabled')|merge({ label_attr: { class: 'checkbox-switch form-label' } })) }}
    </div>
</div>
