{% for permissionGroups in app.flashes('permissions') %}

    <div class="container-xl" {{ sylius_test_html_attribute('sylius-flashes-container') }}>
        <div
            class="mt-3 sylius alert alert-warning"
            role="alert"
            {{ sylius_test_html_attribute('sylius-flash-message') }}
            {{ sylius_test_html_attribute('sylius-flash-message-warning') }}
        >
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <div>
                        {{ ux_icon('tabler:alert-triangle') }}
                    </div>
                    <div class="mx-2">
                        <h4 class="alert-title">{{ 'synerise_integration.flashes.missing_permissions.header'|trans }}</h4>
                        <div class="text-secondary">
                            <div class="mt-3">
                                <strong>{{ 'synerise_integration.flashes.missing_permissions.subheader'|trans }}</strong>
                            </div>
                            <div class="mt-3">{{ 'synerise_integration.flashes.missing_permissions.text'|trans }}</div>

                            <div class="mt-3">
                                <ol>
                                    {% for group, permissions in permissionGroups %}
                                        <li>
                                            {{ group }}
                                            <ul>
                                                {% for permission in permissions %}
                                                    <li>{{ permission }}</li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% endfor %}
                                </ol>


                            </div>
                        </div>
                    </div>
                </div>
                <span class="justify-self-end close" data-bs-dismiss="alert" aria-label="Close">
                    {{ ux_icon('tabler:x') }}
                </span>
            </div>
        </div>
    </div>
{% endfor %}
