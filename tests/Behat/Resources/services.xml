<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <!-- API Resolver - mock or e2e -->
        <service id="synerise_integration.api.client_builder.factory" class="Synerise\Sdk\Api\ClientBuilderFactory">
            <argument type="service" id="synerise_integration.api.default.authentication_provider.factory" />
            <argument type="service" id="synerise_integration.behat.request_adapter.factory_resolver" />
            <argument type="service" id="synerise_integration.api.middleware.default.factory" />
        </service>
        <service id="synerise_integration.behat.request_adapter.factory_resolver" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\RequestAdapterFactoryResolver">
            <argument type="service" id="synerise_integration.api.request_adapter.factory" />
            <argument type="service" id="synerise_integration.behat.mock.api.request_adapter.factory" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="sylius.behat.shared_storage" />
        </service>

        <!-- Mock API -->
        <service id="synerise_integration.behat.mock.api.request_adapter.factory" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\RequestAdapterFactory">
            <argument type="service" id="synerise_integration.behat.mock.handler_queue.factory" />
            <argument type="service" id="synerise_integration.api.middleware.log.factory" />
        </service>
        <service id="synerise_integration.behat.mock.handler_queue.factory" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\HandlerQueueFactory">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="request_stack" />
            <argument type="collection">
                <argument key="api_key_check_permission_success" type="service" id="synerise_integration.behat.mock.response.check_permission.success"/>
                <argument key="accepted" type="service" id="synerise_integration.behat.mock.response.accepted"/>
                <argument key="get_catalogs_bags_success" type="service" id="synerise_integration.behat.mock.response.get_catalogs.success"/>
                <argument key="post_catalogs_bags_success" type="service" id="synerise_integration.behat.mock.response.post_catalogs.success"/>
            </argument>
        </service>
        <service id="synerise_integration.behat.mock.response.check_permission.success" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\ResponseFactory\CheckPermissionSuccess" />
        <service id="synerise_integration.behat.mock.response.accepted" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\ResponseFactory\Accepted" />
        <service id="synerise_integration.behat.mock.response.get_catalogs.success" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\ResponseFactory\GetCatalogsSuccess" >
            <argument type="service" id="request_stack" />
        </service>
        <service id="synerise_integration.behat.mock.response.post_catalogs.success" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\Mock\ResponseFactory\CreateCatalogSuccess" />

        <!-- Logs Parser -->
        <service id="synerise_sylius_integration.behat.log_parser" class="\Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\LogParser">
            <argument type="service" id="kernel" />
        </service>

        <!-- Factories -->
        <service id="sylius.behat.factory.default_azure_channel_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Services\DefaultAzureChannelConfigurationFactory">
            <argument type="service" id="synerise_integration.factory.channel_configuration" />
            <argument type="service" id="synerise_integration.factory.workspace" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
            <argument type="service" id="synerise_integration.repository.workspace" />
        </service>

        <!-- Hook -->
        <service id="synerise_sylius_integration.behat.context.hook.e2e" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Hook\E2EContext">
            <argument type="service" id="sylius.behat.shared_storage" />
        </service>
        <service id="synerise_sylius_integration.behat.context.hook.log" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Hook\LogContext">
            <argument type="service" id="synerise_sylius_integration.behat.log_parser" />
        </service>
        <service id="synerise_sylius_integration.behat.context.hook.messenger" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Hook\MessengerContext">
            <argument type="service" id="doctrine.dbal.default_connection" />
        </service>

        <!-- Domain -->
        <service id="synerise_sylius_integration.behat.context.domain.e2e" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Domain\E2EContext">
            <argument type="service" id="sylius.behat.shared_storage" />
        </service>
        <service id="synerise_sylius_integration.behat.context.domain.log" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Domain\LogContext">
            <argument type="service" id="synerise_sylius_integration.behat.log_parser" />
        </service>
        <service id="synerise_sylius_integration.behat.context.domain.mock_api" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Domain\MockApiContext">
            <argument type="service" id="sylius.behat.shared_storage" />
        </service>
        <service id="synerise_sylius_integration.behat.context.domain.messenger" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Domain\MessengerContext" >
            <argument type="service" id="doctrine.dbal.default_connection" />
            <argument type="service" id="messenger.transport.main" />
            <argument type="service" id="sylius.command_bus" />
            <argument type="service" id="sylius.event_bus" />
            <argument type="service" id="synerise.synchronization_bus" />
        </service>

        <!-- Setup -->
        <service id="synerise_sylius_integration.behat.context.setup.channel_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Setup\ChannelConfigurationContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.behat.factory.default_azure_channel_configuration" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
            <argument type="service" id="synerise_integration.factory.channel_configuration" />
            <argument type="service" id="synerise_integration.factory.workspace" />
            <argument type="service" id="synerise_integration.repository.workspace" />
            <argument type="service" id="parameter_bag" />
        </service>
        <service id="synerise_sylius_integration.behat.context.setup.synchronization_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Setup\SynchronizationConfigurationContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="synerise_integration.repository.synchronization_configuration" />
            <argument type="service" id="synerise_integration.factory.synchronization_configuration" />
            <argument type="service" id="sylius.repository.product_attribute" />
        </service>
        <service id="synerise_sylius_integration.behat.context.setup.workspace" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Setup\WorkspaceContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="synerise_sylius_integration.behat.context.setup.order" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Setup\OrderContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.behat.context.setup.order" />
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <!-- Transform -->
        <service id="synerise_sylius_integration.behat.context.transform.workspace" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Transform\WorkspaceContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="parameter_bag" />
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="synerise_sylius_integration.behat.context.transform.channel_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Transform\ChannelConfigurationContext">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="parameter_bag" />
        </service>
        <service id="synerise_sylius_integration.behat.context.transform.synchronization_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Transform\SynchronizationConfigurationContext">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="parameter_bag" />
        </service>

        <!-- UI -->
        <service id="synerise_sylius_integration.behat.context.ui.javascript" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\JavaScriptContext" />

        <!-- UI Admin -->
        <service id="synerise_sylius_integration.behat.context.ui.admin.workspace" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\Admin\WorkspaceContext" />
        <service id="synerise_sylius_integration.behat.context.ui.admin.channel_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\Admin\ChannelConfigurationContext" />
        <service id="synerise_sylius_integration.behat.context.ui.admin.synchronization_configuration" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\Admin\SynchronizationConfigurationContext" />

        <!-- UI Shop -->
        <service id="synerise_sylius_integration.behat.context.ui.shop.opengraph" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\Shop\OpenGraphContext">
            <argument type="service" id="synerise_sylius_integration.page.shop.product.show" />
        </service>
        <service id="synerise_sylius_integration.behat.context.ui.shop.tracking_script" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Context\Ui\Shop\TrackingScriptContext"/>

        <!-- Pages -->
        <service id="synerise_sylius_integration.page.shop.product.show" class="Tests\Synerise\SyliusIntegrationPlugin\Behat\Page\Shop\Product\ShowPage" parent="sylius.behat.page.shop.product.show" public="false" />
    </services>
</container>
