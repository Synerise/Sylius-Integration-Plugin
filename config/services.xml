<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
        <import resource="services/tracking/listeners.xml" />
    </imports>

    <services>
        <service
            id="synerise_integration.twig.component.tracking_script"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\Tracking\ScriptComponent"
        >
            <argument type="service" id="synerise_integration.context.channel_configuration" />

            <tag name="sylius.twig_component" key="synerise_integration:tracking:script" />
        </service>
        <service id="synerise_integration.form.type.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType" >
            <argument>%synerise_integration.model.channel_configuration.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceType" >
            <argument>%synerise_integration.model.workspace.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceChoiceType">
            <argument type="service" id="synerise_integration.repository.workspace" />

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.api_client_builder_factory" class="Synerise\SyliusIntegrationPlugin\Api\ClientBuilderFactory" />
        <service id="synerise_integration.api_client_builder" class="Synerise\Sdk\Api\ClientBuilder">
            <argument type="service" id="synerise_integration.context.workspace" />
        </service>
        <service id="synerise_integration.current_channel_configuration_factory" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationFactory">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
        </service>
        <service id="synerise_integration.context.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationInterface">
            <factory service="synerise_integration.current_channel_configuration_factory" method="get" />
        </service>
        <service id="synerise_integration.context.workspace" class="Synerise\SyliusIntegrationPlugin\Entity\WorkspaceInterface">
            <factory service="synerise_integration.current_channel_configuration_factory" method="getWorkspace" />
        </service>
        <service id="synerise_integration.cookie_profile_manager" class="Synerise\Sdk\Cookie\CookieProfileManager">
            <argument type="service" id="synerise_integration.cookie_container" />
        </service>
        <service id="synerise_integration.identity_manager" class="Synerise\Sdk\Tracking\IdentityManager">
            <argument type="service" id="synerise_integration.cookie_profile_manager" />
            <argument type="service" id="synerise_integration.uuid_generator" />
        </service>
        <service id="synerise_integration.uuid_generator" class="\Synerise\SyliusIntegrationPlugin\Helper\UuidGenerator"/>
        <service id="synerise_integration.cookie_container" class="Synerise\SyliusIntegrationPlugin\Helper\CookieContainer"/>
        <service  id="synerise_integration.listener.cookie_setter" class="Synerise\SyliusIntegrationPlugin\EventListener\CookieSetterListener">
            <tag name="kernel.event_listener" event="kernel.response" method="setCookies" />
            <argument type="service" id="synerise_integration.cookie_container" />
        </service>
        <service id="synerise_integration.listener.workspace_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\WorkspaceModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_create" method="checkPermissionsRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_update" method="checkPermissionsRequest" />
        </service>
        <service id="synerise_integration.listener.channel_configuration_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\ChannelConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_create" method="getTrackingCodeRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_update" method="getTrackingCodeRequest" />
        </service>
    </services>
</container>
