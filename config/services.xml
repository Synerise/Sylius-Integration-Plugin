<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
    </imports>

    <services>
        <service id="synerise_integration.form.type.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType" >
            <tag name="form.type" />
            <argument>%synerise_integration.model.channel_configuration.class%</argument>
        </service>
        <service id="synerise_integration.form.type.workspace" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceType" >
            <tag name="form.type" />
            <argument>%synerise_integration.model.workspace.class%</argument>
        </service>
        <service id="synerise_integration.form.type.workspace_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceChoiceType">
            <argument type="service" id="synerise_integration.repository.workspace" />
            <tag name="form.type" />
        </service>
        <service id="synerise_integration.listener.workspace_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\WorkspaceModificationListener">
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_create" method="checkPermissionsRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_update" method="checkPermissionsRequest" />
        </service>
    </services>
</container>
