<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
        <import resource="services/tracking/listeners.xml" />
    </imports>

    <services>
        <service
            id="synerise_integration.twig.component.open_graph"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\OpenGraphComponent"
        >
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.currency" />
            <argument type="service" id="sylius.converter.currency" />
            <argument type="service" id="synerise_integration.context.channel_configuration" />

            <tag name="sylius.twig_component" key="synerise_integration:open_graph" />
        </service>
        <service
            id="synerise_integration.twig.component.tracking_script"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\TrackingScriptComponent"
        >
            <argument type="service" id="synerise_integration.context.channel_configuration" />

            <tag name="sylius.twig_component" key="synerise_integration:tracking_script" />
        </service>
        <service
            id="synerise_integration.twig.component.channel_configuration.form"
            class="Sylius\Bundle\UiBundle\Twig\Component\ResourceFormComponent"
        >
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
            <argument type="service" id="form.factory" />
            <argument>%synerise_integration.model.channel_configuration.class%</argument>
            <argument>Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType</argument>

            <tag name="sylius.live_component.admin" key="synerise_integration:channel_configuration:form" />
        </service>
        <service id="synerise_integration.form.type.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType" >
            <argument>%synerise_integration.model.channel_configuration.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceType" >
            <argument>%synerise_integration.model.workspace.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceChoiceType">
            <argument type="service" id="synerise_integration.repository.workspace" />

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.api_client_builder_factory" class="Synerise\SyliusIntegrationPlugin\Api\ClientBuilderFactory" />
        <service id="synerise_integration.api_client_builder" class="Synerise\Sdk\Api\ClientBuilder">
            <argument type="service" id="synerise_integration.context.workspace" />
        </service>
        <service id="synerise_integration.current_channel_configuration_factory" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationFactory">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
        </service>
        <service id="synerise_integration.context.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationInterface">
            <factory service="synerise_integration.current_channel_configuration_factory" method="get" />
        </service>
        <service id="synerise_integration.context.workspace" class="Synerise\SyliusIntegrationPlugin\Entity\WorkspaceInterface">
            <factory service="synerise_integration.current_channel_configuration_factory" method="getWorkspace" />
        </service>
        <service id="synerise_integration.cookie_profile_manager" class="Synerise\Sdk\Cookie\CookieProfileManager">
            <argument type="service" id="synerise_integration.cookie_container" />
        </service>
        <service id="synerise_integration.identity_manager" class="Synerise\Sdk\Tracking\IdentityManager">
            <argument type="service" id="synerise_integration.cookie_profile_manager" />
            <argument type="service" id="synerise_integration.uuid_generator" />
        </service>
        <service id="synerise_integration.uuid_generator" class="\Synerise\SyliusIntegrationPlugin\Helper\UuidGenerator"/>
        <service id="synerise_integration.cookie_container" class="Synerise\SyliusIntegrationPlugin\Helper\CookieContainer"/>
        <service  id="synerise_integration.listener.cookie_setter" class="Synerise\SyliusIntegrationPlugin\EventListener\CookieSetterListener">
            <tag name="kernel.event_listener" event="kernel.response" method="setCookies" />
            <argument type="service" id="synerise_integration.cookie_container" />
        </service>
        <service id="synerise_integration.listener.workspace_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\WorkspaceModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_create" method="checkPermissionsRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_update" method="checkPermissionsRequest" />
        </service>
        <service id="synerise_integration.listener.channel_configuration_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\ChannelConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_create" method="getTrackingCodeRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_update" method="getTrackingCodeRequest" />
        </service>
        <service id="synerise_integration.form.type.event_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\EventChoiceType">
            <argument type="service" id="synerise_integration.api.request_handler_factory" />
            <tag name="form.type" />
        </service>
        <service id="synerise_integration.event_service" class="Synerise\SyliusIntegrationPlugin\Service\EventService">
            <argument type="service" id="synerise_integration.api.request_handler_factory" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
            <argument type="service" id="sylius.event_bus" />
        </service>
        <service id="synerise_integration.processor.customer_processor" class="Synerise\SyliusIntegrationPlugin\Processor\CustomerProcessor">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />
        </service>
        <service id="synerise_integration.serialization.string_json_parse_node_factory" class="Synerise\Sdk\Serialization\StringJsonParseNodeFactory" />
        <!-- MESSAGE HANDLERS -->
        <service id="synerise_integration.message_queue.event_message_handler" class="Synerise\SyliusIntegrationPlugin\MessageQueue\Handler\EventMessageHandler">
            <argument type="service" id="synerise_integration.serialization.string_json_parse_node_factory" />
            <argument type="service" id="synerise_integration.api.request_handler_factory" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />

            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>
        <!-- REQUEST HANDLERS -->
        <service id="synerise_integration.api.request_handler_factory" class="Synerise\SyliusIntegrationPlugin\Api\RequestHandlerFactory">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
            <argument type="collection">
                <argument key="product.addToCart">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\AddedToCartRequestHandler</argument>
                <argument key="product.removeFromCart">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\CartItemRemoveListener</argument>
                <argument key="cart.status">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\CustomEventRequestHandler</argument>
                <argument key="profile.update">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\ProfileRequestHandler</argument>
                <argument key="client.login">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\LoginRequestHandler</argument>
                <argument key="client.logout">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\LogoutRequestHandler</argument>
            </argument>
        </service>
        <!-- PROCESSORS -->
        <service id="synerise_integration.processor.customer_register_processor" class="Synerise\SyliusIntegrationPlugin\Processor\CustomerRegisterProcessor">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="synerise_integration.processor.customer_update_processor" class="Synerise\SyliusIntegrationPlugin\Processor\CustomerUpdateProcessor">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.event_service" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="synerise_integration.processor.customer_login_processor" class="Synerise\SyliusIntegrationPlugin\Processor\CustomerLoginProcessor">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="synerise_integration.processor.customer_logout_processor" class="Synerise\SyliusIntegrationPlugin\Processor\CustomerLogoutProcessor">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>
</container>
