<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
        <import resource="services/tracking/**" />
    </imports>

    <services>
        <service
            id="synerise_integration.twig.component.open_graph"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\OpenGraphComponent"
        >
            <argument type="service" id="sylius.calculator.product_variant_price" />
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="sylius.context.currency" />
            <argument type="service" id="sylius.converter.currency" />
            <argument type="service" id="synerise_integration.context.channel_configuration" />

            <tag name="sylius.twig_component" key="synerise_integration:open_graph" />
        </service>
        <service
            id="synerise_integration.twig.component.tracking_script"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\TrackingScriptComponent"
        >
            <argument type="service" id="synerise_integration.context.channel_configuration" />

            <tag name="sylius.twig_component" key="synerise_integration:tracking_script" />
        </service>
        <service
            id="synerise_integration.twig.component.synchronization_list_customer"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\Synchronization\List\CustomerComponent"
        >
            <argument type="service" id="sylius.repository.customer" />

            <tag name="sylius.twig_component" key="synerise_integration:synchronization_list_customer" />
        </service>
        <service
            id="synerise_integration.twig.component.synchronization_list_order"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\Synchronization\List\OrderComponent"
        >
            <argument type="service" id="sylius.repository.order" />


            <tag name="sylius.twig_component" key="synerise_integration:synchronization_list_order" />
        </service>
        <service
            id="synerise_integration.twig.component.synchronization_list_product"
            class="Synerise\SyliusIntegrationPlugin\Twig\Component\Synchronization\List\ProductComponent"
        >
            <argument type="service" id="sylius.repository.product" />


            <tag name="sylius.twig_component" key="synerise_integration:synchronization_list_product" />
        </service>
        <service id="synerise_integration.form.type.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType">
            <argument>%synerise_integration.model.channel_configuration.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.synchronization" class="Synerise\SyliusIntegrationPlugin\Form\Type\SynchronizationConfigurationType">
            <argument>%synerise_integration.model.synchronization_configuration.class%</argument>
        </service>
        <service
            id="synerise_integration.twig.component.channel_configuration.form"
            class="Sylius\Bundle\UiBundle\Twig\Component\ResourceFormComponent"
        >
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
            <argument type="service" id="form.factory" />
            <argument>%synerise_integration.model.channel_configuration.class%</argument>
            <argument>Synerise\SyliusIntegrationPlugin\Form\Type\ChannelConfigurationType</argument>

            <tag name="sylius.live_component.admin" key="synerise_integration:channel_configuration:form" />
        </service>

        <service
            id="synerise_integration.twig.component.synchronization_configuration.form"
            class="Sylius\Bundle\UiBundle\Twig\Component\ResourceFormComponent"
        >
            <argument type="service" id="synerise_integration.repository.synchronization_configuration" />
            <argument type="service" id="form.factory" />
            <argument>%synerise_integration.model.synchronization_configuration.class%</argument>
            <argument>Synerise\SyliusIntegrationPlugin\Form\Type\SynchronizationConfigurationType</argument>

            <tag name="sylius.live_component.admin" key="synerise_integration:synchronization_configuration:form" />
        </service>

        <service id="synerise_integration.form.type.synchronization_configuration" class="Synerise\SyliusIntegrationPlugin\Form\Type\SynchronizationConfigurationType" >
            <argument>%synerise_integration.model.synchronization_configuration.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceType" >
            <argument>%synerise_integration.model.workspace.class%</argument>

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.workspace_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\WorkspaceChoiceType">
            <argument type="service" id="synerise_integration.repository.workspace" />

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.api_client_builder_factory" class="Synerise\SyliusIntegrationPlugin\Api\ClientBuilderFactory" />
        <service id="synerise_integration.api_client_builder" class="Synerise\Sdk\Api\ClientBuilder">
            <argument type="service" id="synerise_integration.context.workspace" />
        </service>
        <service id="synerise_integration.channel_configuration_factory" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationFactory">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />
        </service>
        <service id="synerise_integration.synchronization_configuration_factory" class="Synerise\SyliusIntegrationPlugin\Entity\SynchronizationConfigurationFactory">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.repository.synchronization_configuration" />
        </service>
        <service id="synerise_integration.context.channel_configuration" class="Synerise\SyliusIntegrationPlugin\Entity\ChannelConfigurationInterface">
            <factory service="synerise_integration.channel_configuration_factory" method="get" />
        </service>
        <service id="synerise_integration.context.workspace" class="Synerise\SyliusIntegrationPlugin\Entity\WorkspaceInterface">
            <factory service="synerise_integration.channel_configuration_factory" method="getWorkspace" />
        </service>
        <service id="synerise_integration.cookie_profile_manager" class="Synerise\Sdk\Cookie\CookieProfileManager">
            <argument type="service" id="synerise_integration.helper.cookie_container" />
        </service>
        <service id="synerise_integration.identity_manager" class="Synerise\Sdk\Tracking\IdentityManager">
            <argument type="service" id="synerise_integration.cookie_profile_manager" />
            <argument type="service" id="synerise_integration.helper.uuid_generator" />
        </service>
        <service id="synerise_integration.helper.uuid_generator" class="Synerise\SyliusIntegrationPlugin\Helper\UuidGenerator"/>
        <service id="synerise_integration.helper.cookie_container" class="Synerise\SyliusIntegrationPlugin\Helper\CookieContainer"/>
        <service  id="synerise_integration.listener.cookie_setter" class="Synerise\SyliusIntegrationPlugin\EventListener\CookieSetterListener">
            <tag name="kernel.event_listener" event="kernel.response" method="setCookies" />
            <argument type="service" id="synerise_integration.helper.cookie_container" />
        </service>
        <service id="synerise_integration.listener.workspace_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\WorkspaceModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_create" method="checkPermissionsRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_update" method="checkPermissionsRequest" />
        </service>
        <service id="synerise_integration.listener.channel_configuration_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\ChannelConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_create" method="getTrackingCodeRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_update" method="getTrackingCodeRequest" />
        </service>
        <service id="synerise_integration.listener.synchronization_configuration_modification" class="Synerise\SyliusIntegrationPlugin\EventListener\SynchronizationConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
            <argument type="service" id="synerise_integration.channel_configuration_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.synchronization_configuration.pre_create" method="getCatalogIdRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.synchronization_configuration.pre_update" method="getCatalogIdRequest" />
        </service>
        <service id="synerise_integration.form.type.event_choice" class="Synerise\SyliusIntegrationPlugin\Form\Type\EventChoiceType">
            <argument type="service" id="synerise_integration.api.request_handler_factory" />

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.form.type.product_attribute" class="Synerise\SyliusIntegrationPlugin\Form\Type\ProductAttributeChoiceType">
            <argument type="service" id="sylius.repository.product_attribute" />

            <tag name="form.type" />
        </service>
        <service id="synerise_integration.kiota.serialization.json.serialization_writer_factory" class="Microsoft\Kiota\Serialization\Json\JsonSerializationWriterFactory" />
        <service id="synerise_integration.event_handler.event_handler_factory" class="Synerise\SyliusIntegrationPlugin\EventHandler\EventHandlerFactory">
            <argument type="tagged_iterator" tag="app.handler" index-by="handler_key" />
        </service>
        <service id="synerise_integration.event_handler.live_handler" class="Synerise\SyliusIntegrationPlugin\EventHandler\LiveHandler">
            <argument type="service" id="synerise_integration.channel_configuration_factory" />
            <argument type="service" id="synerise_integration.api.request_handler_factory" />

            <tag name="app.handler" handler_key="live" />
        </service>
        <service id="synerise_integration.event_handler.message_queue_handler" class="Synerise\SyliusIntegrationPlugin\EventHandler\MessageQueueHandler">
            <argument type="service" id="sylius.event_bus" />
            <argument type="service" id="synerise_integration.kiota.serialization.json.serialization_writer_factory" />

            <tag name="app.handler" handler_key="message_queue" />
        </service>
        <service id="synerise_integration.serialization.string_json_parse_node_factory" class="Synerise\Sdk\Serialization\StringJsonParseNodeFactory" />
        <!-- MESSAGE HANDLERS -->
        <service id="synerise_integration.message_queue.event_message_handler" class="Synerise\SyliusIntegrationPlugin\MessageQueue\Handler\EventMessageHandler">
            <argument type="service" id="synerise_integration.serialization.string_json_parse_node_factory" />
            <argument type="service" id="synerise_integration.api.request_handler_factory" />
            <argument type="service" id="synerise_integration.repository.channel_configuration" />

            <tag name="messenger.message_handler" bus="sylius.event_bus" />
        </service>
        <service id="synerise_integration.message_queue.start_synchronization_handler" class="Synerise\SyliusIntegrationPlugin\MessageQueue\Handler\SyncStartMessageHandler">
            <argument type="service" id="synerise_integration.synchronization_factory" />

            <tag name="messenger.message_handler" bus="synerise.synchronization_bus" />
        </service>
        <service id="synerise_integration.message_queue.synchronization_handler" class="Synerise\SyliusIntegrationPlugin\MessageQueue\Handler\SyncMessageHandler">
            <argument type="service" id="synerise_integration.repository.synchronization" />
            <argument type="service" id="synerise_integration.synchronization_factory" />

            <tag name="messenger.message_handler" bus="synerise.synchronization_bus" />
        </service>
        <!-- REQUEST HANDLERS -->
        <service id="synerise_integration.api.request_handler_factory" class="Synerise\SyliusIntegrationPlugin\Api\RequestHandlerFactory">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
            <argument type="collection">
                <argument key="product.addToCart">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\AddedToCartRequestHandler</argument>
                <argument key="product.removeFromCart">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\RemovedFromCartRequestHandler</argument>
                <argument key="cart.status">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\CustomEventRequestHandler</argument>
                <argument key="profile.update">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\ProfileRequestHandler</argument>
                <argument key="client.login">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\LoginRequestHandler</argument>
                <argument key="client.logout">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\LogoutRequestHandler</argument>
                <argument key="transaction.charge">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\TransactionRequestHandler</argument>
                <argument key="product.update">Synerise\SyliusIntegrationPlugin\Api\RequestHandler\ProductRequestHandler</argument>
            </argument>
        </service>
        <service id="synerise_integration.synchronization.processor.customer" class="Synerise\SyliusIntegrationPlugin\Synchronization\CustomerSynchronizationProcessor">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="synerise.synchronization_bus"/>
            <argument type="service" id="synerise_integration.channel_configuration_factory"/>
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
        </service>
        <service id="synerise_integration.synchronization.processor.order" class="Synerise\SyliusIntegrationPlugin\Synchronization\OrderSynchronizationProcessor">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="synerise.synchronization_bus"/>
            <argument type="service" id="synerise_integration.channel_configuration_factory"/>
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
        </service>
        <service id="synerise_integration.synchronization_factory" class="Synerise\SyliusIntegrationPlugin\Synchronization\SynchronizationFactory">
            <argument type="collection">
                <argument key="customer" type="service" id="synerise_integration.synchronization.processor.customer"/>
                <argument key="order" type="service" id="synerise_integration.synchronization.processor.order"/>
            </argument>
        </service>
        <service id="synerise_integration.synchronization.create_synchronization_command" class="Synerise\SyliusIntegrationPlugin\Command\CreateSynchronizationCommand">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sylius.repository.channel"/>
            <argument type="service" id="synerise.synchronization_bus"/>
            <argument type="service" id="synerise_integration.repository.synchronization_configuration" />

            <tag name="console.command" />
        </service>
        <service id="synerise.synchronization_bus" class="Symfony\Component\Messenger\MessageBus">
            <argument type="tagged_iterator" tag="messenger.bus.middleware"/>
            <tag name="messenger.bus"/>
        </service>

    </services>
</container>
