            <join-column name="channel_id"  />
        </one-to-one>
        <many-to-one field="workspace" target-entity="Synerise\SyliusIntegrationPlugin\Entity\WorkspaceInterface">
            <join-column name="workspace_id"  />
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
