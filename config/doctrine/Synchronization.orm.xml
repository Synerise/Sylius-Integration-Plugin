<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Synerise\SyliusIntegrationPlugin\Entity\Synchronization" table="synerise_synchronization">
        <id name="id" column="id" type="integer">
            <generator strategy="IDENTITY" />
        </id>

        <field name="status" column="status" />
        <field name="type" column="type" />
        <field name="configurationSnapshot" column="configuration_snapshot" />
        <field name="total" column="total" type="integer" nullable="true"/>
        <field name="sent" column="sent" type="integer" nullable="true" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="true" />

        <many-to-one
            field="channel"
            target-entity="Sylius\Component\Core\Model\Channel"
        >
            <join-column name="channel_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

    </mapped-superclass>
</doctrine-mapping>
