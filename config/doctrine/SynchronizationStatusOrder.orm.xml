<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Synerise\SyliusIntegrationPlugin\Entity\SynchronizationStatusOrder" table="synerise_synchronization_status_order">
        <many-to-one field="order" target-entity="Sylius\Component\Core\Model\OrderInterface">
            <join-column name="order_id" nullable="false"/>
        </many-to-one>
        <many-to-one field="channel" target-entity="Sylius\Component\Core\Model\ChannelInterface">
            <join-column name="channel_id" nullable="false"/>
        </many-to-one>
        <field name="updatedAt" column="updated_at" type="datetime_immutable" />
        <unique-constraints>
            <unique-constraint columns="order_id,channel_id" name="unique_order_channel"/>
        </unique-constraints>
    </mapped-superclass>
</doctrine-mapping>
