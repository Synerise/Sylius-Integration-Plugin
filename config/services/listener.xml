<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="synerise_integration.listener.cookie_setter" class="Synerise\SyliusIntegrationPlugin\Listener\CookieSetterListener">
            <tag name="kernel.event_listener" event="kernel.response" method="setCookies" />
            <argument type="service" id="synerise_integration.helper.cookie_container" />
        </service>
        <service id="synerise_integration.listener.workspace_modification" class="Synerise\SyliusIntegrationPlugin\Listener\WorkspaceModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_create" method="checkPermissionsRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.workspace.pre_update" method="checkPermissionsRequest" />
        </service>
        <service id="synerise_integration.listener.channel_configuration_modification" class="Synerise\SyliusIntegrationPlugin\Listener\ChannelConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_create" method="getTrackingCodeRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.channel_configuration.pre_update" method="getTrackingCodeRequest" />
        </service>
        <service id="synerise_integration.listener.synchronization_configuration_modification" class="Synerise\SyliusIntegrationPlugin\Listener\SynchronizationConfigurationModificationListener">
            <argument type="service" id="synerise_integration.api_client_builder_factory" />
            <argument type="service" id="synerise_integration.channel_configuration_factory" />

            <tag name="kernel.event_listener" event="synerise_integration.synchronization_configuration.pre_create" method="getCatalogIdRequest" />
            <tag name="kernel.event_listener" event="synerise_integration.synchronization_configuration.pre_update" method="getCatalogIdRequest" />
        </service>
    </services>
</container>
