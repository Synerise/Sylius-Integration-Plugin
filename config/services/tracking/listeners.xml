<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="synerise_integration.listener.cart_item_add" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CartItemAddListener">
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />

            <tag name="kernel.event_listener" event="sylius.cart_item_add" method="process" priority="-1000" />
        </service>
        <service id="synerise_integration.listener.cart_item_remove" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CartItemRemoveListener">
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />

            <tag name="kernel.event_listener" event="sylius.cart_item_remove" method="process" priority="1000" />
        </service>
        <service id="synerise_integration.listener.cart_status" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CartStatusListener">
            <argument type="service" id="sylius.context.cart" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />

            <tag name="kernel.event_listener" event="sylius.cart_item_add" method="process" priority="-1000" />
            <tag name="kernel.event_listener" event="sylius.cart_item_remove" method="process" priority="-1000" />
            <tag name="kernel.event_listener" event="sylius.cart_change" method="process" priority="-1000" />
        </service>
        <service id="synerise_integration.listener.cart_status_clear" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CartStatusClearListener">
            <argument type="service" id="sylius.context.channel" />
            <argument type="service" id="synerise_integration.identity_manager" />
            <argument type="service" id="synerise_integration.event_service" />

            <tag name="kernel.event_listener" event="sylius.cart_clear" method="process" />
        </service>
        <!-- CUSTOMER LISTENERS -->
        <service id="synerise_integration.listener.customer_registered" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CustomerRegisteredListener">
            <tag name="kernel.event_listener" event="sylius.customer.post_register" />
            <argument type="service" id="synerise_integration.processor.customer_register_processor" />
        </service>
        <service id="synerise_integration.listener.customer_updated" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CustomerUpdatedListener">
            <tag name="kernel.event_listener" event="sylius.customer.post_update" />
            <argument type="service" id="synerise_integration.processor.customer_update_processor" />
        </service>
        <service id="synerise_integration.listener.customer_login" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CustomerLoggedInListener">
            <tag name="kernel.event_listener" event="Symfony\Component\Security\Http\Event\LoginSuccessEvent" />
            <argument type="service" id="synerise_integration.processor.customer_login_processor" />
        </service>
        <service id="synerise_integration.listener.customer_logout" class="Synerise\SyliusIntegrationPlugin\EventListener\Tracking\CustomerLoggedOutListener">
            <tag name="kernel.event_listener" event="Symfony\Component\Security\Http\Event\LogoutEvent" />
            <argument type="service" id="synerise_integration.processor.customer_logout_processor" />
        </service>
    </services>
</container>
